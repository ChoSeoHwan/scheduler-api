{
    "extends": "@choseohwan/tsconfig-base",
    "compilerOptions": {
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "~/*": ["src/*"]
        },
        "declaration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": false,
        "strictPropertyInitialization": false
    }
}